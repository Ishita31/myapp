<p id="notice"><%= notice %></p>

<h1>Bikes</h1>
<%#= render template: "/app//views/layout/header" %>
<%#= render :partial => 'header', :layout => 'layouts/header' %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Model</th>
      <th>Year</th>
      <th>Colour</th>
      <th>Kms</th>
      <th>Fuel</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.user_id %></td>
        <td><%= bike.name %></td>
        <td><%= bike.model %></td>
        <td><%= bike.year %></td>
        <td><%= bike.colour %></td>
        <td><%= bike.kms %></td>
        <td><%= bike.fuel %></td>
        <td><%= bike.image %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
